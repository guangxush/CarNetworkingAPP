<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.my.baidumap.activity.OrderActivity"
    android:background="#f4f6f7">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#177be1"
        android:layout_height="50dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:gravity="left"
            android:text="预约信息"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#00000000">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">


            <EditText
                android:editable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="20dp"
                android:hint="加油车辆"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:id="@+id/tvjiayoucheliang" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ffffff">

<EditText
            android:id="@+id/txttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:textSize="20dp"
    android:hint="加油时间（2016-01-01）"
    android:gravity="center"
    android:layout_toLeftOf="@+id/button1"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="25dp" />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择时间"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_alignParentTop="true" />

            <!--<EditText-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="5"-->
                <!--android:textSize="20dp"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_marginLeft="25dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginRight="25dp"-->
                <!--android:hint="加油时间（2016-01-01）"-->
                <!--android:gravity="center"-->
                <!--android:id="@+id/tvshijian" />-->

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ffffff">



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="20dp"
                android:hint="加油站"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:id="@+id/tvjiayouzhan" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="20dp"
                android:hint="加油类型(93#)"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:id="@+id/tvjiayouleixing" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#ffffff">




            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:hint="加油量(升)"
                android:gravity="center"
                android:id="@+id/tvjiayoushuliang" />


        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnshengchengerweima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约并生成二维码"
            android:background="@drawable/round_corner"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="55dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:textSize="25dp" />
    </RelativeLayout>



</LinearLayout>
