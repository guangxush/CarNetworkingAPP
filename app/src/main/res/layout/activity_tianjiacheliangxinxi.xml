                    android:textSize="20dp"
                    android:inputType="phone"

                    android:layout_toLeftOf="@+id/tvkm"
                    android:layout_toStartOf="@+id/tvkm"
                    android:layout_toRightOf="@+id/textView5"
                    android:layout_toEndOf="@+id/textView5"
